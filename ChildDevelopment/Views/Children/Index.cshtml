@using System.Collections.Generic;
@using ChildDevelopment.Models;
@{
  Layout = "_Layout";
}

<h2>All kids</h2>

@if(@Model.Count == 0)
{
  <h3>There are no children in the ChildDevelopment Database</h3>
}

else
{
  <ul>
    @foreach(Child child in @Model)
    {
      <li><a href="/children/@child.GetId()/show">@child.GetName()</a></li>
    }
  </ul>  
}
<h4><a href="/">Back home</a></h4>